package mvc.core {	// import flash.display.MovieClip;	import flash.events.Event;	/**	 * @author Matthijs Kamstra aka [mck]	 */	public class ViewEvent extends Event {		public static const ON_SHOW : String = "show";		public static const ON_HIDE : String = "hide";		public static const ON_SHOW_FINISHED : String = "onShowFinished";		public static const ON_HIDE_FINISHED : String = "onHideFinished";		private var _target : View;		//private var _target : MovieClip;		public function ViewEvent(type : String, target : View, bubbles : Boolean = false, cancelable : Boolean = false) { 		//public function ViewEvent(type : String, target : MovieClip, bubbles : Boolean = false, cancelable : Boolean = false) { 			super(type, bubbles, cancelable);			_target = target;		} 		public override function clone() : Event { 			return new  ViewEvent(type, _target, bubbles, cancelable);		} 		public override function toString() : String { 			return formatToString("ViewEvent", "type", "target", "bubbles", "cancelable", "eventPhase"); 		}	}}