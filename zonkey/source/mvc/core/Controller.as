package mvc.core {	public class Controller {		private var _model : Model;		private var _view : View;		public function Controller( inModel : Model, inView : View ) {			_model = inModel;			_view = inView;		}		//////////////////////////////////////// getter/setter ////////////////////////////////////////			public function set model( inModel : Model ) : void {			_model = inModel;		}		public function get model() : Model {			return _model;		}		public function set view( inView : View ) : void {			_view = inView;		}		public function get view() : View {			return _view;		}	}}