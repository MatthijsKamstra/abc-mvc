package ex.ample.views {	import assets.view.Gamma;	import mvc.core.View;
	import mvc.core.Controller;	import com.greensock.TweenMax;	import flash.events.Event;	/**	 * @author Matthijs Kamstra aka [mck]	 */	public class GammaView extends View {		/**		 * Constructor		 */		public function GammaView( inController : Controller = null, inType : String = VIEW_DEFAULT) {			super(inController, inType);			addChild(new Gamma());						// trace ( "+ GammaView.GammaView() - args: " + [ inController, inType ] );		}						/**		 * Method used to show this view.		 *		 * @param event		Event.		 */		override public function show( event : Event = null ) : void {			visible = true;			scaleX = scaleY = .5;			TweenMax.to(this, 1, {scaleX:1, scaleY:1});		}	}}