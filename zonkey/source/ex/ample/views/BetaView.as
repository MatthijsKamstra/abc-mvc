package ex.ample.views {	import assets.view.Beta;	import mvc.core.View;
	import com.greensock.TweenMax;	import flash.events.Event;	/**	 * @author Matthijs Kamstra aka [mck]	 */	public class BetaView extends View {				/**		 * Constructor		 */
		public function BetaView() {
			super(null, VIEW_ANIMATED);			addChild(new Beta());						// trace ( "+ BetaView.BetaView() - args: " + [ inController, inType ] );		}		/**		 * Method used to show this view.		 *		 * @param event		Event.		 */		override public function show(event : Event = null) : void {			visible = true;			alpha = 0;			x = -10;			TweenMax.to(this, 1, {x:0, autoAlpha:1});		 }		 		/**		 * Method used to hide this view.		 *		 * @param event		Event.		 */		override public function hide(event : Event = null ) : void {			//			visible = false;			TweenMax.to(this, 1, {x:-10, autoAlpha:0});			destroy();		}	}}